<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                    android:color="#CC9900" />
            <stroke
                    android:width="2dp"
                    android:color="#CC9000" />
            <corners
                    android:radius="5dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                    android:startColor="#ffe600"
                    android:endColor="#ffe600"
                    android:angle="45" />
            <stroke
                    android:width="10dp"
                    android:color="#ff0200" />
            <corners
                    android:radius="0dp" />
            <padding
                    android:left="10dp"
                    android:top="10dp"
                    android:right="10dp"
                    android:bottom="10dp" />
        </shape>
    </item>
</selector>