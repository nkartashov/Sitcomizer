<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="1"
            android:background="#449def">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="New Button"
                android:id="@+id/up_left_button" android:layout_weight="1"
                android:background="@drawable/my_button_sad_hl"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="New Button"
                android:id="@+id/up_right_button" android:layout_weight="1"
                android:background="@drawable/my_button_sad_hr"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="1" android:baselineAligned="true"
            android:background="#449def">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="New Button"
                android:id="@+id/bottom_left_button" android:layout_weight="1"
                android:background="@drawable/my_button_sad_dl"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="New Button"
                android:id="@+id/bottom_right_button" android:layout_weight="1"
                android:background="@drawable/my_button_sad_dr"/>

    </LinearLayout>
</LinearLayout>