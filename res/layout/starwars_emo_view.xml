<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="1"
            android:background="@android:color/white">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/up_left_button"
                android:layout_weight="1"
                android:background="@drawable/my_button_sw_hl"
                android:textStyle="bold"
                android:drawableBottom="@drawable/ic_chubakka"
                android:textColor="#000000"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/up_right_button"
                android:layout_weight="1"
                android:background="@drawable/my_button_sw_hr"
                android:drawableBottom="@drawable/ico_mymaster"
                android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="1"
            android:background="@android:color/white">
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="New Button"
                android:drawableBottom="@drawable/ic_dart_vader"
                android:id="@+id/bottom_left_button" android:layout_weight="1"
                android:background="@drawable/my_button_sw_dl" android:textStyle="bold" android:textColor="#000000"/>
        <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="New Button"
                android:drawableBottom="@drawable/ic_terminator"
                android:id="@+id/bottom_right_button" android:layout_weight="1"
                android:background="@drawable/my_button_sw_dr" android:textStyle="bold"/>

    </LinearLayout>
</LinearLayout>